<project name="ShadowJdtCore" basedir="." default="make.jdtcore.jar">
    <property name="eclipse.dir" value="c:\aspectj\2.1rc3b"/>
    <property name="plugins.dir" value="${eclipse.dir}/eclipse/plugins"/>

    <target name="makeJdtDepends">
        <jar destfile="lib/jdtDepends.jar">
            <zipfileset src="${plugins.dir}/org.eclipse.core.boot_2.1.0/boot.jar"/>
            <zipfileset src="${plugins.dir}/org.eclipse.core.resources_2.1.0/resources.jar"/>
            <zipfileset src="${plugins.dir}/org.eclipse.core.runtime_2.1.0/runtime.jar"/>
            <zipfileset src="${plugins.dir}/org.apache.xerces_4.0.7/xercesImpl.jar"/>
            <zipfileset src="${plugins.dir}/org.apache.xerces_4.0.7/xmlParserAPIs.jar"/>
        </jar>
    </target>


    <target name="make.jdtcore.jar">
        <jar destfile="jdtcore.jar">
            <fileset dir="bin"/>
            <zipfileset src="lib/jdtDepends.jar"/>
        </jar>
    </target>
</project>