<project name="ShadowJdtCore" basedir="." default="make.jdtcore.jar">
    <property name="eclipse.home" value="c:/ColyerRoot/Programs/Eclipse30/eclipse"/>
    <property name="plugins.dir" value="${eclipse.home}/plugins"/>
    <property name="eclipse.version" value="3.0.0"/>
    <property name="plugins.src.dir" value="${plugins.dir}/org.eclipse.platform.source_${eclipse.version}/src"/>
    <property name="aspectjtools.jar" value=""/>

    <target name="makeJdtDepends">
        <delete file="lib/jdtDepends.jar"/>
        <jar destfile="lib/jdtDepends.jar">
            <zipfileset src="${plugins.dir}/org.eclipse.core.boot_${eclipse.version}/boot.jar"/>
            <zipfileset src="${plugins.dir}/org.eclipse.core.resources_${eclipse.version}/resources.jar"/>
            <zipfileset src="${plugins.dir}/org.eclipse.core.runtime_${eclipse.version}/runtime.jar"/>
            <zipfileset src="${plugins.dir}/org.eclipse.osgi_${eclipse.version}/osgi.jar"/>
 <!--           <zipfileset src="${plugins.dir}/org.apache.xerces_4.0.13/xercesImpl.jar"/>
            <zipfileset src="${plugins.dir}/org.apache.xerces_4.0.13/xmlParserAPIs.jar"/> -->

            <zipfileset src="${plugins.dir}/org.eclipse.text_${eclipse.version}/text.jar"/>
            <zipfileset src="${plugins.dir}/org.eclipse.core.runtime.compatibility_${eclipse.version}/compatibility.jar"/>
            <zipfileset src="${plugins.dir}/org.apache.ant_1.6.1/lib/ant.jar"/>
 <!--           <zipfileset src="${plugins.dir}/org.apache.ant_1.6.1/lib/optional.jar"/> -->
            
        </jar>
        <delete file="lib/jdtDepends-src.zip"/>
        <jar destfile="lib/jdtDepends-src.zip" update="true">
<!--           <zipfileset src="${plugins.src.dir}/org.eclipse.core.boot_${eclipse.version}/bootsrc.zip"/> -->
            <zipfileset src="${plugins.src.dir}/org.eclipse.core.resources_${eclipse.version}/resourcessrc.zip"/>
            <zipfileset src="${plugins.src.dir}/org.eclipse.core.runtime_${eclipse.version}/runtimesrc.zip"/>
            <zipfileset src="${plugins.src.dir}/org.eclipse.osgi_${eclipse.version}/osgisrc.zip"/>
 <!--           <zipfileset src="${plugins.src.dir}/org.apache.xerces_4.0.13/xercessrc.zip"/> -->

            <zipfileset src="${plugins.src.dir}/org.eclipse.text_${eclipse.version}/textsrc.zip"/>
            <zipfileset src="${plugins.src.dir}/org.eclipse.core.runtime.compatibility_${eclipse.version}/compatibilitysrc.zip"/>
            <zipfileset src="${plugins.src.dir}/org.apache.ant_1.6.1/lib/antsrc.zip"/>
        </jar>
    </target>


    <target name="make.jdtcore.jar">
    	<delete file="../org.eclipse.jdt.core/jdtcore-for-aspectj.jar"/>
        <jar destfile="../org.eclipse.jdt.core/jdtcore-for-aspectj.jar">
            <fileset dir="bin"/>
        </jar> 
        <jar destfile="../org.eclipse.jdt.core/jdtcore-for-aspectj.jar" update="true">
            <zipfileset src="lib/jdtDepends.jar" excludes="org/apache/**,org/w3c/**,org/xml/**"/>
        </jar> 
        <delete file="../org.eclipse.jdt.core/jdtcore-for-aspectj-src.zip"/>
        <jar destfile="../org.eclipse.jdt.core/jdtcore-for-aspectj-src.zip">
            <fileset dir="batch"/>
            <fileset dir="compiler"/>
            <fileset dir="antadapter"/>
            <fileset dir="antadapter"/>
            <fileset dir="codeassist"/>
            <fileset dir="dom"/>
            <fileset dir="eval"/>
            <fileset dir="formatter"/>
            <fileset dir="model"/>
            <fileset dir="search"/>
        </jar> 
        <jar destfile="../org.eclipse.jdt.core/jdtcore-for-aspectj-src.zip" update="true">
            <zipfileset src="lib/jdtDepends-src.zip" excludes="org/apache/**,org/w3c/**,org/xml/**"/>
      	</jar>
    </target>
    
    <target name="make.ajdtcore.jar" 
            description="build the ajdtcore.jar and jdtcore.jar used by the org.eclipse.ajdt.core plugin">
        <delete file="lib/ajdtcore.jar"/>
        <jar destfile="lib/ajdtcore.jar">
            <zipfileset src="${aspectjtools.jar}">
              <include name = "org/aspectj/asm/**" />
              <include name = "org/aspectj/bridge/**" />
              <include name = "org/aspectj/ajdt/**" />
              <include name = "org/aspectj/tools/**" />
              <include name = "org/aspectj/lang/**" />
              <include name = "org/aspectj/runtime/**" />
              <include name = "org/aspectj/util/**" />
              <include name = "org/aspectj/weaver/**" />
            </zipfileset>
            <fileset dir="bin"/>
        </jar>                        
    </target>
    
</project>